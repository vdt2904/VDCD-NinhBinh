@model IReadOnlyList<VDCD.Entities.Custom.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Danh sách Danh Mục</h4>

        <button class="btn btn-primary" onclick="openCreateModal()">
            <i class="bi bi-plus"></i> Thêm mới
        </button>
    </div>

    <div class="card">
        <div class="card-body">

            <!-- Search -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <input type="text"
                           id="searchInput"
                           class="form-control"
                           placeholder="Tìm kiếm..." />
                </div>
            </div>

            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle" id="dataTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width:80px">ID</th>
                            <th>Tên</th>
                            <th>Mô tả</th>
                            <th style="width:120px">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var stt = 1;
                        }

                        @foreach (var item in Model)
                        {
                            <tr data-id="@item.Id"
                                data-name="@item.CategoryName"
                                data-desc="@item.Description">
                                <td>@stt</td>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-warning"
                                            onclick="openEditModal(this)">
                                        Sửa
                                    </button>
                                </td>
                            </tr>
                            stt++;
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav class="mt-3">
                <ul class="pagination justify-content-center" id="pagination"></ul>
            </nav>

        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form id="categoryForm">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="Id" id="Id" />

                    <div class="mb-3">
                        <label class="form-label">Tên category</label>
                        <input type="text"
                               class="form-control"
                               name="CategoryName"
                               id="CategoryName"
                               maxlength="100"
                               required />

                        <div class="invalid-feedback">
                            Tên category không được để trống
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-control"
                                  name="Description"
                                  id="Description"
                                  maxlength="500"></textarea>

                        <div class="invalid-feedback">
                            Mô tả không quá 500 ký tự
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Đóng
                    </button>

                    <button type="submit" class="btn btn-primary">
                        Lưu
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
<script>
    const categorySaveUrl = '@Url.Action("Save", "Category", new { area = "Admin" })';
</script>

<script src="~/js/admin/category/index.js" asp-append-version="true"></script>