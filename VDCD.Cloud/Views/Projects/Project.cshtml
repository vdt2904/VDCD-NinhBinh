        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .project-info-table td {
            /* Tăng kích thước chữ cho toàn bộ bảng */
            font-size: 1.25rem;
            /* Giảm padding để thu hẹp khoảng cách các dòng nếu cần */
            padding: 15px 0;
