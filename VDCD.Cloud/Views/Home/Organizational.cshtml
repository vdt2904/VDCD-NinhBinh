@model VDCD.Models.OrganizationalModelView
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@functions {
    string GetSt(string key) => Model.Settings.ContainsKey(key) ? Model.Settings[key] : "";
}
<section class="hero-section d-flex align-items-end">
    <div class="container-fluid px-0">
        <div class="hero-content text-white p-5">

            <h1 class="display-3 fw-bold mb-0">@ViewData["Title"]</h1>
            <hr class="border-light opacity-50 mb-4" style="width:90%">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a href="/" class="text-white text-decoration-none">Home</a></li>
                    <li class="breadcrumb-item active text-white fw-light" aria-current="page">Cơ cấu tổ chức</li>
                </ol>
            </nav>

        </div>
    </div>
</section>
<style>
    .hero-section {
        /* Thay đường dẫn ảnh của bạn vào đây */
        background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6)), url('/uploads/1046cdc6-6989-44eb-89ee-49fd85f442fe_bc_page.jpg');
        background-size: cover;
        background-position: center;
        height: 700px; /* Điều chỉnh chiều cao tùy ý */
        position: relative;
        display: flex;
        align-items: flex-end; /* Đẩy nội dung xuống đáy */
    }

    .hero-content {
        width: 100%;
        background: linear-gradient(transparent, rgba(0,0,0,0.4)); /* Làm tối nhẹ phần chân chữ */
        padding-bottom: 60px !important;
        padding-left: 10% !important;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: ">";
        color: white;
    }

    .hero-content h1 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        letter-spacing: -1px;
    }

    /* Responsive cho mobile */
    @@media (max-width: 768px) {
        .hero-section {
            height: 350px;
        }

        .hero-content h1 {
            font-size: 2.5rem;
        }
    }
</style>
<script>
    $(document).ready(function () {
        $.ajax({
            url: '/home/GetHeader',
            type: 'GET',
            success: function (response) {
                if (response.success) {
                    // 1. Cập nhật Logo từ mảng footer
                    const logoData = response.footer.find(item => item.settingKey === "setting.general.footer.logo");
                    if (logoData) {
                        $('#main-logo').attr('src', logoData.value);
                    }
                }
            },
            error: function (err) {
                console.error("Không thể lấy dữ liệu từ API", err);
            }
        });
    });
</script>
<style>
    /* 1. Card nhân sự ngoài danh sách */
    .custom-rect-img {
        /* Chỉnh tỷ lệ 3/3.5 để hình chữ nhật không quá cao */
        aspect-ratio: 3 / 3.6;
        background-color: #f4f4f4;
        position: relative;
        overflow: hidden;
    }

        .custom-rect-img img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Đảm bảo ảnh lấp đầy khung hình chữ nhật */
            transition: transform 0.6s ease;
        }

    .team-card:hover img {
        transform: scale(1.05);
    }

    /* 2. Nút dấu cộng (+) */
    .btn-plus-overlay {
        position: absolute;
        bottom: 12px;
        right: 12px;
        width: 36px;
        height: 36px;
        background-color: white;
        border-radius: 50%;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        font-size: 1.4rem;
        transition: all 0.3s ease;
        z-index: 5;
    }

        .btn-plus-overlay:hover {
            background-color: #f8d7da;
            color: #dc3545;
            transform: rotate(90deg);
        }

    /* 3. Modal chi tiết - Giảm chiều cao ảnh để bớt cao */
    #modal-avatar {
        min-height: 400px; /* Chỉnh lại chiều cao ảnh trong modal */
        object-fit: cover;
    }

    .orange-decorator {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 45%;
        height: 30%; /* Khối cam thấp xuống theo ảnh */
        background-color: #FD7E14;
        clip-path: polygon(100% 0, 0% 100%, 100% 100%);
        z-index: 2;
    }

    /* Tiêu đề và nội dung */
    .text-muted-custom {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        font-size: 0.75rem;
        font-weight: 600;
        min-height: 38px;
    }
</style>

<section class="py-5">
    <div class="container" style="max-width:unset">
        <div class="text-center mb-5">
            <div class="d-flex align-items-center justify-content-center mb-2">
                <span class="bg-danger me-2" style="width: 25px; height: 2px;"></span>
                <span class="text-danger fw-bold text-uppercase" style="font-size: 0.8rem;">ban giám đốc.</span>
            </div>
            <h2 class="display-6 fw-bolder text-uppercase">Đội ngũ lãnh đạo</h2>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @if (Model.Users != null)
            {
                foreach (var item in Model.Users.Where(u => u.IsShow == true))
                {
                    <div class="col">
                        <div class="card h-100 border-0 bg-transparent team-card">
                            <div class="custom-rect-img shadow-sm">
                                <img src="@(string.IsNullOrEmpty(item.Avatar) ? "/images/default-avatar.png" : item.Avatar)" alt="@item.FullName">

                                <button class="btn-plus-overlay"
                                        data-bs-toggle="modal"
                                        data-bs-target="#userModal"
                                        data-name="@item.FullName"
                                        data-dept="@item.DepartmentName"
                                        data-bio="@item.Profile"
                                        data-avatar="@item.Avatar">
                                    <span>+</span>
                                </button>
                            </div>

                            <div class="mt-3">
                                <p class="text-muted text-uppercase mb-1 text-muted-custom">
                                    @item.DepartmentName
                                </p>
                                <h5 class="fw-bold text-dark mb-0" style="font-size: 1.25rem;">
                                    @item.FullName
                                </h5>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <div class="mb-2">
                <span style="width: 25px; height: 2px; background: red; display: inline-block; margin-right: 10px; vertical-align: middle;"></span>
                <span class="text-danger fw-bold text-uppercase" style="font-size: 0.8rem;">cơ cấu tổ chức.</span>
            </div>
            <h2 class="fw-bold text-uppercase">@GetSt("setting.general.OrgStructure.title")</h2>
        </div>
        <div class="text-center">
            <img src="@GetSt("setting.general.OrgStructure.image")" class="img-fluid shadow-sm bg-white p-2" alt="Sơ đồ tổ chức">
        </div>
    </div>
</section>

<div class="modal fade" id="userModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 position-relative shadow-lg" style="border-radius: 0;">
            <button type="button" class="btn-close-custom shadow-sm" data-bs-dismiss="modal"
                    style="position: absolute; top: -15px; right: -15px; width: 35px; height: 35px; background: white; border: none; border-radius: 50%; z-index: 1060;">
                ✕
            </button>

            <div class="modal-body p-0">
                <div class="row g-0">
                    <div class="col-md-7 p-4 p-md-5 d-flex flex-column justify-content-center bg-white">
                        <p id="modal-dept" class="text-danger fw-bold text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 1px;"></p>
                        <h2 id="modal-name" class="fw-bolder mb-3" style="font-size: 2.2rem; line-height: 1.1;"></h2>
                        <div style="width: 60px; height: 1.5px; background-color: #eee; margin-bottom: 25px;"></div>
                        <div id="modal-bio" class="text-secondary" style="font-size: 0.95rem; line-height: 1.8; text-align: justify;">
                        </div>
                    </div>

                    <div class="col-md-5 position-relative bg-light d-none d-md-block">
                        <div class="orange-decorator"></div>
                        <img id="modal-avatar" src="" class="w-100 h-100 object-fit-cover position-relative" style="z-index: 1;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const userModal = document.getElementById('userModal');
        userModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            userModal.querySelector('#modal-name').textContent = button.getAttribute('data-name');
            userModal.querySelector('#modal-dept').textContent = button.getAttribute('data-dept');
            userModal.querySelector('#modal-avatar').src = button.getAttribute('data-avatar') || "/images/default-avatar.png";
            userModal.querySelector('#modal-bio').innerHTML = button.getAttribute('data-bio') || "Nội dung đang được cập nhật...";
        });
    });
</script>