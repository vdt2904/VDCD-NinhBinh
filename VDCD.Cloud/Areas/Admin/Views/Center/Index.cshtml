@model List<VDCD.Entities.Custom.Center>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Quản lý Center";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách Trung Tâm</h5>
            <div class="d-flex gap-2">
                <input type="text" id="searchInput" class="form-control form-control-sm"
                       style="width:250px" placeholder="Tìm theo tên center..." />
                <button class="btn btn-primary" onclick="openCenterModal()">Thêm mới</button>
            </div>
        </div>

        <div class="card-body p-0">
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:60px">STT</th>
                        <th>Tên Center</th>
                        <th>Url</th>
                        <th style="width:120px">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="centerTable">
                    @{
                        var stt = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr data-id="@item.Id"
                            data-name="@item.Name"
                            data-description="@item.Description"
                            data-url="@item.Url"
                            data-image="@item.Image">
                            <td>@stt</td>
                            <td>@item.Name</td>
                            <td>@item.Url</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-warning" onclick="editCenter(this)">Sửa</button>
                                <button class="btn btn-sm btn-danger" onclick="deleteCenter(this)">Xóa</button>
                            </td>
                        </tr>
                        stt++;
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-center p-3">
                <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="centerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <form id="centerForm" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thông tin Center</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="Id" name="Id" />

                <div class="mb-3">
                    <label class="form-label">Tên Center</label>
                    <input class="form-control" id="Name" name="Name" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <textarea class="form-control" id="Description" name="Description" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Icon</label>
                    <div class="input-group">
                        <input class="form-control" id="Icon" name="Icon" placeholder="Chọn ảnh từ thư viện..." />
                        <button class="btn btn-outline-secondary" type="button" onclick="openFileManagerForBlock('Icon')">
                            <i class="fas fa-image"></i> Chọn ảnh
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Url</label>
                    <input class="form-control" id="Url" name="Url" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Ảnh đại diện</label>
                    <div class="input-group">
                        <input class="form-control" id="CenterImage" name="Image" placeholder="Chọn ảnh từ thư viện..." />
                        <button class="btn btn-outline-secondary" type="button" onclick="openFileManagerForBlock('CenterImage')">
                            <i class="fas fa-image"></i> Chọn ảnh
                        </button>
                    </div>
                    <div id="previewCenterImage" class="mt-2 border rounded d-none" style="width:150px; height:100px; overflow:hidden;">
                        <img src="" class="w-100 h-100 object-fit-cover" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">Lưu</button>
                <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Đóng</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="fileManagerModal" tabindex="-1" aria-hidden="true" style="z-index:1060;">
    <div class="modal-dialog modal-xl modal-dialog-centered" style="height:90vh;">
        <div class="modal-content h-100">
            <div class="modal-header">
                <h5 class="modal-title">Thư viện ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0 h-100">
                <iframe id="fileManagerIframe" src="" style="width:100%; height:100%; border:none;"></iframe>
            </div>
        </div>
    </div>
</div>

<script src="~/js/admin/center/index.js" asp-append-version="true"></script>