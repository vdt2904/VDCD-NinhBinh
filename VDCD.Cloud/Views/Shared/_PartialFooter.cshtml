@{
    // Ép kiểu ViewBag.Settings về Dictionary (giả sử bạn lưu dạng Dictionary<string, string>)
    var settings = ViewBag.Settings as Dictionary<string, string> ?? new Dictionary<string, string>();

    // Hàm tra cứu an toàn: nếu không có key thì trả về chuỗi rỗng
    string GetSt(string key)
    {
        return settings.ContainsKey(key) ? settings[key] : "";
    }
}
