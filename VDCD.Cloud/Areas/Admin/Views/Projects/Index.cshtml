@model List<VDCD.Entities.Custom.Project>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Project";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">

    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách Dự án</h5>
            <div class="d-flex gap-2">
                <input type="text"
                       id="searchInput"
                       class="form-control form-control-sm"
                       style="width:250px"
                       placeholder="Tìm theo tên project..." />
                <button class="btn btn-primary" onclick="openCreateModal()">
                    Thêm mới
                </button>
            </div>
        </div>

        <div class="card-body p-0">
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:60px">STT</th>
                        <th>Tên Project</th>
                        <th>Danh mục</th>
                        <th style="width:120px"></th>
                    </tr>
                </thead>
                <tbody id="projectTable">
                    @{
                        var stt = 1;
                        var categoryMap = ((IEnumerable<dynamic>)ViewBag.Categories)
                        .ToDictionary(x => (int)x.Id, x => (string)x.CategoryName);
                    }
                    @foreach (var item in Model)
                    {
                        <tr data-id="@item.Id"
                            data-name="@item.ProjectName"
                            data-category="@item.CategoryId"
                            data-investor="@item.Investor"
                            data-time="@item.Time"
                            data-location="@item.Location"
                            data-isactive="@item.IsActive.ToString().ToLower()"
                            data-image="@item.Image"
                            data-json='@item.Json'>

                            <td>@stt</td>
                            <td>@item.ProjectName</td>
                            <td>
                                @(item.CategoryId != null && categoryMap.ContainsKey(item.CategoryId.Value)
                                    ? categoryMap[item.CategoryId.Value]
                                    : "")
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-warning" onclick="openEditModal(this)">
                                    Sửa
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="deleteProject(this)">
                                    Xóa
                                </button>
                            </td>
                        </tr>
                        stt++;
                    }
                </tbody>
            </table>

            <!-- PAGINATION -->
            <div class="d-flex justify-content-center p-3">
                <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
            </div>
        </div>
    </div>
</div>

<!-- ================= MODAL ================= -->
<div class="modal fade" id="projectModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <form id="projectForm" class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <input type="hidden" id="Id" name="Id" />
                <input type="hidden" id="Json" name="Json" />

                <div class="mb-3">
                    <label>Tên Project</label>
                    <input class="form-control" id="ProjectName" name="ProjectName" required />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Nhà đầu tư</label>
                        <input class="form-control" id="Investor" name="Investor" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Thời gian</label>
                        <input class="form-control" id="Time" name="Time" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>Địa điểm</label>
                    <input class="form-control" id="Location" name="Location" />
                </div>

                <div class="mb-3">
                    <label>Ảnh đại diện Project (Thumbnail)</label>
                    <div class="input-group">
                        <input class="form-control" id="ProjectImage" name="Image" placeholder="Đường dẫn ảnh chính..." />
                        <button class="btn btn-outline-secondary" type="button" onclick="openFileManagerForBlock('ProjectImage')">
                            <i class="fas fa-image"></i> Chọn ảnh
                        </button>
                    </div>
                    <div id="previewProjectImage" class="mt-2 border rounded d-none" style="width:150px; height:100px; overflow:hidden;">
                        <img src="" class="w-100 h-100 object-fit-cover" />
                    </div>
                </div>

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive">
                    <label class="form-check-label" for="IsActive">Đã hoàn thành</label>
                </div>

                <div class="mb-3">
                    <label>Danh mục</label>
                    <select class="form-select" id="CategoryId" name="CategoryId">
                        <option value="">-- Chọn --</option>
                        @foreach (var c in ViewBag.Categories)
                        {
                            <option value="@c.Id">@c.CategoryName</option>
                        }
                    </select>
                </div>

                <hr />

                <div class="d-flex justify-content-between mb-2">
                    <h6>Nội dung</h6>
                    <button type="button" class="btn btn-sm btn-success" onclick="addContentBlock()">+ Thêm nội dung</button>
                </div>

                <div id="contentList"></div>

            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">Lưu</button>
                <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Đóng</button>
            </div>

        </form>
    </div>
</div>

<!-- FILE MANAGER MODAL -->
<div class="modal fade" id="fileManagerModal" tabindex="-1" aria-hidden="true" style="z-index:1060;">
    <div class="modal-dialog modal-xl modal-dialog-centered" style="height:90vh;">
        <div class="modal-content h-100">
            <div class="modal-header">
                <h5 class="modal-title">Thư viện ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0 h-100">
                <iframe id="fileManagerIframe" src="" style="width:100%; height:100%; border:none;"></iframe>
            </div>
        </div>
    </div>
</div>

<script src="~/js/admin/project/index.js" asp-append-version="true"></script>
