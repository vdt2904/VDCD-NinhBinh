    }

    .value-column {
        /* Cột giá trị sẽ tự động chiếm phần còn lại */
        padding-left: 20px !important; /* Khoảng cách đệm nhỏ giữa tiêu đề và nội dung */
        color: #000;
    }

    /* Tăng font chữ riêng cho các tiêu đề lớn nếu cần */
    .hero-content h1 {
        font-size: 4rem; /* To hơn mức display-3 mặc định */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        letter-spacing: -1px;
    }

    /* Responsive cho mobile */
    @@media (max-width: 768px) {
        .label-column {
            width: 40%; /* Trên mobile nên để rộng hơn một chút để tránh tràn chữ */
        }

        .project-info-table td {
            font-size: 1.1rem;
        }
    }
</style>
@using Newtonsoft.Json

<section class="project-json-content py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                @{
                    // Giải mã chuỗi Json từ Model
                    var jsonContent = new List<dynamic>();
                    if (!string.IsNullOrEmpty(Model.Json))
                    {
                        jsonContent = JsonConvert.DeserializeObject<List<dynamic>>(Model.Json);
                    }
                }

                @foreach (var item in jsonContent)
                {
                    <div class="json-item mb-5">
                        @if (item.title != null && !string.IsNullOrEmpty(item.title.ToString()))
                        {
                            <h2 class="json-title fw-bold mb-3">@item.title</h2>
                        }

                        @if (item.content != null && !string.IsNullOrEmpty(item.content.ToString()))
                        {
                            <div class="json-description mb-4 text-muted">
                                @Html.Raw(item.content)
                            </div>
                        }

                        @* Kiểm tra nếu có ảnh thì mới hiển thị thẻ img *@
                        @if (item.image != null && !string.IsNullOrEmpty(item.image.ToString()))
                        {
                            <div class="json-image-wrapper">
                                <img src="@item.image" class="img-fluid w-100 rounded shadow-sm" alt="@item.title" />
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<style>
    /* ... các style cũ của bạn ... */

    .json-title {
        font-size: 2.2rem; /* Chữ tiêu đề to và đậm */
        color: #000;
        line-height: 1.2;
        margin-top: 2rem;
    }

    .json-description {
        font-size: 1.15rem; /* Kích thước chữ nội dung */
        line-height: 1.8;
        color: #444;
        text-align: justify; /* Căn lề đều hai bên cho chuyên nghiệp */
    }

    .json-image-wrapper img {
        margin-top: 1rem;
        object-fit: cover;
        max-height: 600px; /* Giới hạn chiều cao ảnh nếu cần */
    }

    /* Responsive cho tiêu đề trên mobile */
    @@media (max-width: 768px) {
        .json-title {
            font-size: 1.6rem;
        }

        .json-description {
            font-size: 1rem;
        }
    }
</style>