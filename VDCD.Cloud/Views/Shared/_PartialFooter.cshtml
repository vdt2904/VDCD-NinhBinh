<style>
    /* Tăng khoảng cách tổng thể */
    .pt-100 {
        padding-top: 100px;
    }

    .footer-section {
        font-family: 'Inter', sans-serif;
        background-color: #080808; /* Đen sâu hơn nhìn sẽ sang hơn */
    }

    /* Tăng size thông tin liên hệ */
    .contact-info-row h3 {
        font-size: calc(1.5rem + 1vw); /* Co giãn theo màn hình nhưng luôn to */
        letter-spacing: -1px;
    }

    .footer-logo {
        height: 70px; /* Tăng từ 50px lên 70px */
        width: auto;

    }

    /* Social Items to hơn */
    .social-item {
        width: 45px;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #1a1a1a;
        border: 1px solid #333;
        color: white;
        text-decoration: none;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        border-radius: 4px;
    }

        .social-item:hover {
            background-color: #e30613;
            border-color: #e30613;
            color: white;
            transform: translateY(-5px);
        }

    /* Menu Link to và thoáng */
    .footer-menu a {
        color: #aaa;
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .footer-menu a:hover {
            color: #e30613;
            padding-left: 10px;
        }

    /* Nút Back to Top kiểu mới */
    .back-to-top-btn {
        color: white;
        text-decoration: none;
        font-weight: bold;
        font-size: 0.8rem;
        letter-spacing: 2px;
        border: 1px solid #333;
        padding: 12px 25px;
        transition: 0.3s;
    }

        .back-to-top-btn:hover {
            background: white;
            color: black;
        }

    /* Fix đường kẻ cho mobile */
    @@media (max-width: 767.98px) {
        .contact-info-row div {
            border-right: none !important;
            border-bottom: 1px solid #333;
            padding-left: 0 !important;
            padding-bottom: 25px;
        }

        .pt-100 {
            padding-top: 60px;
        }
    }

    .scroll-top {
        position: fixed;
        visibility: hidden;
        opacity: 0;
        right: 30px;
        bottom: 30px;
        z-index: 999;
        background: #e30613; /* Màu đỏ VDCD */
        width: 50px; /* Tăng kích thước cho dễ bấm */
        height: 50px;
        border-radius: 4px;
        transition: all 0.4s;
        color: white;
        text-decoration: none;
    }

        .scroll-top.active {
            visibility: visible;
            opacity: 1;
        }

        .scroll-top i {
            font-size: 32px; /* Icon to rõ */
            line-height: 0;
        }

        .scroll-top:hover {
            background: #b3050f;
            color: white;
        }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const btn = document.querySelector('.scroll-top');

        // Hiện nút khi cuộn xuống 200px
        window.addEventListener('scroll', function () {
            if (window.scrollY > 200) {
                btn.classList.add('active');
            } else {
                btn.classList.remove('active');
            }
        });

        // Xử lý cuộn mượt khi click
        btn.addEventListener('click', function () {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    });
</script>

<a href="javascript:void(0)" class="scroll-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
</a>