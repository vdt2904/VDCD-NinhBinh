@{
	// Lấy key số lượng vision
	var vidxKey = Model.Settings.Keys
		.FirstOrDefault(k => k == "setting.general.vision.quantity");

	// Parse số lượng vision (fallback = 0)
	var visionQuantity = 0;
	if (vidxKey != null)
	{
		int.TryParse(Model.Settings[vidxKey], out visionQuantity);
	}

	// Lấy các index vision hiện có
	var visionIndexes = Model.Settings.Keys
		.Where(k => k.StartsWith("setting.general.vision.tab_name."))
		.Select(k => k.Replace("setting.general.vision.tab_name.", ""))
		.Select(idx => int.TryParse(idx, out var i) ? i : -1)
		.Where(i => i >= 0)
		.OrderBy(i => i)
		.Take(visionQuantity)
		.ToList();
}


<section class="vision-section py-5 position-relative">
	<div class="vision-bg-overlay d-none d-lg-block"></div>

	<div class="container position-relative" style="z-index: 2;">
		@* 1. TIÊU ĐỀ CHÍNH *@
