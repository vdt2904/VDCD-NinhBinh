			</div>
		</div>

		@* 2. THANH ĐIỀU HƯỚNG TAB (Đã tách ra ngoài để sửa lỗi click 2 lần) *@
		<div class="row mb-4">
			<div class="col-lg-6 offset-lg-6 ps-lg-5">
				<ul class="nav nav-pills gap-3 justify-content-center justify-content-lg-start" id="visionTab" role="tablist">
					@foreach (var idx in visionIndexes)
					{
						<li class="nav-item" role="presentation">
							<button class="nav-link rounded-pill px-4 fw-bold @(idx == visionIndexes.First() ? "active" : "bg-white text-dark shadow-sm")"
									id="tab-btn-@idx"
									data-bs-toggle="pill"
									data-bs-target="#content-tab-@idx"
									type="button" role="tab">
								@GetSt($"setting.general.vision.tab_name.{idx}")
							</button>
						</li>
					}
				</ul>
			</div>
		</div>

		@* 3. NỘI DUNG TAB *@
		<div class="tab-content" id="visionTabContent">
			@foreach (var idx in visionIndexes)
			{
				var isActive = (idx == visionIndexes.First()) ? "show active" : "";

				<div class="tab-pane fade @isActive" id="content-tab-@idx" role="tabpanel">
					<div class="row align-items-center">
						<div class="col-lg-6 p-0 position-relative">
							<div class="vision-image shadow-lg">
								<img src="@GetSt($"setting.general.vision.image.{idx}")" class="img-fluid w-100" alt="Vision" style="height: 500px; object-fit: cover;">
							</div>
						</div>

						<div class="col-lg-6 ps-lg-5 mt-4 mt-lg-0">
							<div class="vision-content-box">
								<h3 class="fw-bold mb-3 fs-2 text-uppercase">@GetSt($"setting.general.vision.title.{idx}")</h3>
								<p class="text-muted lh-lg mb-4" style="text-align: justify;">
									@GetSt($"setting.general.vision.content.{idx}")
								</p>

								@* XỬ LÝ DÒNG CHỮ XUỐNG DÒNG THÀNH LIST *@
								<div class="vision-lines-list">
									@{
										var linesRaw = GetSt($"setting.general.vision.lines.{idx}");
										if (!string.IsNullOrEmpty(linesRaw))
										{
											// Tách chuỗi theo ký tự xuống dòng
											var lines = linesRaw.Split(new[] { "\r\n", "\r", "\n" }, StringSplitOptions.RemoveEmptyEntries);
											foreach (var line in lines)
											{
												<div class="line-item d-flex align-items-center py-3 border-bottom">
													<span class="dot-red me-3"></span>
													<span class="fw-bold text-dark">@line.Trim()</span>
												</div>
											}
										}
									}
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
